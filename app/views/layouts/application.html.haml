!!!
%html
  %head
    %title= @page_title || 'CIMAV'
    = stylesheet_link_tag 'compiled/screen.css', :media => 'screen, projection'
    = stylesheet_link_tag 'compiled/print.css', :media => 'print'
    /[if lt IE 8]
    = stylesheet_link_tag 'compiled/ie.css', :media => 'screen, projection'
    = javascript_include_tag :defaults
    = javascript_include_tag 'jquery-ui-1.8.11.custom.min.js'
    - if !@include_js.nil?
      = javascript_include_tag @include_js
    = csrf_meta_tag
  %body
    #top-bar
      %img#logo{:src => '/images/logo.png'}
      #nav-select= @page_title || 'Posgrado'
      #account= @user.email

    #nav-menu
      %ul.nav
        %li.op#op-home= link_to "Escritorio", root_url
        %li.op#op-students= link_to "Estudiantes", students_path
        %li.op#op-staff= link_to "Docentes", staffs_path
        %li.op#op-staff= link_to "Programas", programs_path
        %li.op#op-internships= link_to "Servicios CIMAV", internships_path
        %li.op#op-internships= link_to "Tipos de Servicios CIMAV", internship_types_path
        %li.op#op-institutions= link_to "Instituciones", institutions_path
        %li.op#op-classrooms= link_to "Aulas", classrooms_path
        %li.op#op-laboratories= link_to "Laboratorios", laboratories_path
        %li.op#op-scholarship_categories= link_to "Becas", scholarship_categories_path
        %li.op#op-users= link_to "Campus", campus_path
        %li.op#op-users= link_to "Usuarios", users_path
        %li.op#op-users= link_to "Departamentos", departments_path

    #flash-notice

    #main
      = yield
