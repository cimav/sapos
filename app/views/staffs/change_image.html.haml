    parent.changeResourceImage("#{@staff.id}", "#{@staff.image_url(:small).to_s}", "#{@staff.image_url(:medium).to_s}");
  });

  $("#staff_image").live("change", function() {
    $('#upload-button').html('Cambiando...')
    $("#item-upload-image-form").submit();
  });
