= form_for @studies_plan_area, :remote => true, :html => { :'data-type' => 'html', :id => 'item-new-form' } do |f|
  .resource-header
    .resource-title
      %h1= "Nueva Area "
    .resource-save
      = f.submit 'Agregar'

  #resource-tabs
    %ul
      %li.first-tab= link_to "Detalles", "#detalles"
  
  #detalles
    %h2 Detalles
 
    .field#field_area_name
      = f.label :name, 'Nombre del area'
      = f.text_field :name
   
    .field#field_area_area_type
      = f.label :studies_plan_id, 'Plan de estudios'
      = f.collection_select :studies_plan_id, @studies_plans, :id, :name, options = {:prompt => "Selecciona el plan de estudios"}
