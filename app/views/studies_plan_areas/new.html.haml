= form_for @studies_plan_area, :remote => true, :html => { :'data-type' => 'html', :id => 'item-new-form' } do |f|
  .resource-header
    .resource-title
      %h1= "Nueva Area "
    .resource-save
      = f.submit 'Agregar'

  #resource-tabs
    %ul
      %li.first-tab= link_to "Detalles", "#detalles"
  
  #detalles
    %h2 Detalles
 
    .field#field_area_name
      = f.label :name, 'Nombre del area'
      = f.text_field :name

    .field#not_field_area_program
      = label_tag "Programa"
      = select_tag "program_field", options_from_collection_for_select(Program.all,"id","name"), options = {:prompt => "Selecciona un programa"}
   
    .field#field_area_area_type{:style=>"display: none;"}
      = f.label :studies_plan_id, 'Plan de estudios'
      = f.select :studies_plan_id, options_for_select(@studies_plans.map{|sp|[sp.name,sp.id,{'program_id'=>sp.program_id,'style'=>'display: none;'}] }),options = {:prompt => "Selecciona el plan de estudios"}
