#schedule-header
  %h3= @tc.course.name
  #schedule-term Ciclo Escolar: #{@tc.term.name} (#{l @tc.term.start_date, :format => :long} â€“ #{l @tc.term.end_date, :format => :long})
  #schedule-term-group Grupo: #{@tc.group}: #{(@tc.staff.full_name rescue 'Sin titular')}

- form_for(@tc, :url => { :action => "update_group" }) do |f|
  = f.hidden_field :id
  %div{:id => "group_staff", :class => 'field'}
    = f.label :staff_id, 'Titular'
    = f.grouped_collection_select :staff_id, Institution.order('name'), :staffs, :name, :id, :full_name, options = {:prompt => "Selecciona el docente"}
  #dialog-submit-button-area
    = f.submit "Cambiar titular"

