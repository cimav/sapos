- @include_js = 'programs'
- @page_title = 'Programas'
- @nav_icon = 'programs'
#items-panel.side-panel.inst-side-panel.programs-items
  .panel-search
    
    = form_tag programs_path, :id => 'live-search', :method => 'get', :remote => true do
      = select_tag "program_type", options_for_select(Program::PROGRAM_TYPE.invert.sort {|a,b| a[1] <=> b[1] })
      = text_field_tag :q, nil, :id => 'search-box', :placeholder => 'Busqueda'
     
  #items-list.panel-items
  
  .panel-add
    - if can? :create, Program
      = link_to  'Agregar nuevo programa', {:action => 'new'},  {:id => 'add-new-item', :method => :get, :remote => true, :'data-type' => 'html'}

