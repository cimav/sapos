= form_for @internship_type, :remote => true, :html => { :'data-type' => 'html', :id => 'item-new-form' } do |f|

  .resource-header
    .resource-title
      %h1= "Nuevo Tipo de Servicio CIMAV"
    .resource-save
      = f.submit 'Agregar'

  #resource-tabs
    %ul
      %li.first-tab= link_to "Detalles", "#detalles"

    #detalles
      %h2 Detalles

      .field#field_internship_type_name
        = f.label :name, mark_required(@internship_type, :name) + 'Nombre' 
        = f.text_field :name 
