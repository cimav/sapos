        = fields.label :tutor5, 'Comite Tutoral 5'
        = fields.collection_select :tutor5, staffs, :id, :full_name, options = {:include_blank => true}
        - if adv.advance_type.eql? 1 #advance
          = fields.select :grade5, (0..100).to_a.unshift(["NP",-1]), :prompt => '---'
        - elsif adv.advance_type.eql? 3 #seminar
          = link_to 'Formato', "/estudiantes/seminario/#{adv.id}/#{adv.tutor5}", :target=> "_blank"

      %div{:id => "field_student_advance_#{index}_notes", :class => 'field'}
        = fields.label :notes, 'Notas'
        = fields.text_area :notes
