        - elsif adv.advance_type.eql? 3 #seminar
          = link_to 'Formato', "/estudiantes/seminario/#{adv.id}/#{adv.tutor2}", :target=> "_blank"

      %div{:id => "field_student_advance_#{index}_tutor3", :class => 'field'}
        = fields.label :tutor3, 'Comite Tutoral 3'
        = fields.collection_select :tutor3, staffs, :id, :full_name, options = {:include_blank => true}
        - if adv.advance_type.eql? 1 #advance
          = fields.select :grade3, (0..100).to_a.unshift(["NP",-1]), :prompt => '---'
        - elsif adv.advance_type.eql? 3 #seminar
          = link_to 'Formato', "/estudiantes/seminario/#{adv.id}/#{adv.tutor3}", :target=> "_blank"

      %div{:id => "field_student_advance_#{index}_tutor4", :class => 'field'}
        = fields.label :tutor4, 'Comite Tutoral 4'
        = fields.collection_select :tutor4, staffs, :id, :full_name, options = {:include_blank => true}
