-#%iframe{"name" => "mobility_iframe", "id" => "mobility_iframe","src" => "estudiantes/movilidades/#{params[:id]}", "scrolling" => "no", :frameborder=>"0"}
:css
  .add-mobility{
    cursor: pointer;
  }
  
- if @mobilities.size<=0
  = "No hay movilidades registradas"
- else
  #users-contain.ui-widget
    - @mobilities.each do |m|
      = m.start_date
      = m.end_date

%a.add-mobility="Agregar Movilidad"
 
#dialog-form{:title=>"Agregar Movilidad"}
  %p{:class=>"validateTips"}="Todos los campos son requeridos"


     
:javascript
  $(document).ready(function(){
    dialog = $("#dialog-form").dialog({
      autoOpen: false,
      height: 400,
      width: 300,
      modal: true, 
    });
 
    $('.add-mobility').click(AddMobility);
  })

  function AddMobility(){
    dialog.dialog("open")
  }
