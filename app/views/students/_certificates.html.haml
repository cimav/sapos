- if @student.program.level.to_i.eql? 3 #propedeutico
  - @acceso= 1
- else 
  -if @student.supervisor.nil?
    - @acceso = 0
    %p 
      %b= "Aviso: este alumno no tiene asignado un asesor, solo tendra acceso a las constancias que puedan imprimirse."
  - else
    - @acceso = 1

- if @acceso.eql? 1
  %br= link_to 'Constancia de estudios', "estudiantes/constancias/estudios/#{@student.id}"
  %br= link_to 'Constancia de inscripción', "estudiantes/constancias/inscripcion/#{@student.id}"
  %br= link_to 'Constancia para VISA', "estudiantes/constancias/visa/#{@student.id}"
  %br= link_to 'Constancia de promedio general', "estudiantes/constancias/promedio/#{@student.id}"
  %br= link_to 'Constancia de promedio semestral', "estudiantes/constancias/semestral/#{@student.id}"
  %br= link_to 'Constancia para el tramite de seguro', "estudiantes/constancias/seguro/#{@student.id}"
  %br= link_to 'Constancia de créditos cubiertos', "estudiantes/constancias/creditos/#{@student.id}"
- else
  %br
    %u{:style=>"color:#D9D9D9"}= 'Constancia de estudios'
  %br 
    %u{:style=>"color:#D9D9D9"}= 'Constancia de inscripción'
  %br
    %u{:style=>"color:#D9D9D9"}='Constancia para VISA'
  %br
    %u{:style=>"color:#D9D9D9"}= 'Constancia de promedio general'
  %br
    %u{:style=>"color:#D9D9D9"}= 'Constancia de promedio semestral'
  %br= link_to 'Constancia para el tramite de seguro', "estudiantes/constancias/seguro/#{@student.id}"
  %br= link_to 'Constancia de créditos cubiertos', "estudiantes/constancias/creditos/#{@student.id}"
  


