:css  
  .inputfile {
     width: 0.1px;
     height: 0.1px;
     opacity: 0;
     overflow: hidden;
     position: absolute;
     z-index: -1;
  }
  
  .inputfile + label {
    font-size: 1.25em;
    font-weight: 700;
    color: white;
    background-color: black;
    display: inline-block;
    cursor: pointer;
  }
  
  .inputfile:focus + label,
  .inputfile + label:hover{
    background-color: red;
  }
  
  .inputfile:focus + label{
    outline: 1px dotted #000;
    outline: -webkit-focus-ring-color auto 5px;
  }

= form_for(EnrollmentFile.new, :url => {:action => "upload_file_register"}, :html => {:id => "reqdoc-form-1", :multipart=> true,:target=>'files_iframe2'}) do |f|
  = f.file_field :file, :class=>'inputfile'
  = label_tag "enrollment_file[file]","Elige un archivo"



