%ul.panel-list
  - c = 0
  - @students.each do |student|
    - c += 1
    %li 
      = link_to student, :method => :get, :remote => true, :class => 'get-item', :'data-type' => 'html', :id => "student_link_#{student.id}" do
        = image_tag student.image_url(:small).to_s, :id => "img-small-#{student.id}"
        .title= student.full_name
        .comment= student.program.name
#counter
  .inner= "#{c} estudiantes"

