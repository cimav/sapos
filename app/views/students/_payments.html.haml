- @student.term_students.each do |s|
  - counter = 0 
  %table#grades_table{:width => '60%'}
    %tr
      %th.centered= "Fecha"
      %th.centered= "Cantidad"
      %th.centered= "Estatus"
      %th.centered= "File"
      - s.term_student_payment.each do |tsp| 
        - counter += 1
        - if counter % 2 == 0 
          - klass = 'row-even'
        - else
          - klass = 'row-odd'
        %tr{:class => klass}
          %td= "#{l tsp.created_at, :format => :long}"
          %td= tsp.amount
          %td= tsp.status_type
          %td= "N.D"

        - if counter == 0 
          %tr
            %td.centered{:colspan=>4}= "No hay resultados"
