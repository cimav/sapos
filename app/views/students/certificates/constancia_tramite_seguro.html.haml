        %b= "#{@start_day} de #{@start_month}"
        = " al "
        %b= "#{@end_day} de #{@end_month} de #{@end_year}."
      - else
        %b= "#{@start_day} de #{@start_month} de #{@start_year}"
        = " al "
        %b= "#{@end_day} de #{@end_month} de #{@end_year}."
