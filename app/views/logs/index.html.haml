- if @logs.blank?
  %br
  %h3.centered= " No hay logs registrados"
-else 
  %table#logs_table
    %tr
      %th.centered= "#"
      %th.centered= "Usuario"
      %th.centered= "Fecha"
      %th.centered= "AcciÃ³n"
      - counter = 1
      - @logs.each do |l|
        - mod = counter % 2
        - if mod==0 
          %tr.row-even
            %td= "#{counter} &nbsp;".html_safe
            %td= l.user.email rescue "N.D."
            %td= "&nbsp; #{l l.updated_at, :format => :long}  &nbsp;".html_safe
            %td= l.activity
        - else 
          %tr.row-odd
            %td= "#{counter} &nbsp;".html_safe
            %td= l.user.email rescue "N.D."
            %td= "&nbsp; #{l l.updated_at, :format => :long} &nbsp;".html_safe
            %td= l.activity
        - counter = counter + 1
