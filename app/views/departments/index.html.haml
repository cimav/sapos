- @include_js = ['departments']
- @page_title = 'Departamentos'
- @nav_icon = 'departments'
#items-panel.side-panel.inst-side-panel
  .panel-search
    
    = form_tag departments_path, :id => 'live-search', :method => 'get', :remote => true do
      = text_field_tag :q, nil, :id => 'search-box', :placeholder => 'Busqueda'
     
  #items-list.panel-items
  
  .panel-add
    - if can? :create, Department
      = link_to  'Agregar nuevo departamento', {:action => 'new'},  {:id => 'add-new-item', :method => :get, :remote => true, :'data-type' => 'html'}

